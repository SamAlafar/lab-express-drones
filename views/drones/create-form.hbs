<h2>Create a new drone</h2>
<form action="/drones/create" method="POST">
    <label for="drone-name">Name:</label>
    <input required type="text" name="name" placeholder="Type name">

    <label for="done-propellers">Propellers:</label>
    <input required type="number" name="propellers" min=0 placeholder="Select propellers">

    <label for="drone-maxspeed">Max Speed:</label>
    <input required type="number" name="maxSpeed" min=0 placeholder="Select max Speed">

    <button type="submit">Add</button>
</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}